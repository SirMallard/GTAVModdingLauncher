<UserControl x:Class="GTAVModdingLauncher.Ui.NewsEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>

		<ScrollViewer Grid.Column="0" Margin="3" VerticalScrollBarVisibility="Auto">
			<StackPanel Margin="3">
				<AccessText Name="Headline" Text="Headline" FontSize="25" Foreground="White" Margin="6,0,0,0" TextWrapping="WrapWithOverflow"/>
				<AccessText Name="Subtitle" Text="Subtitle" FontSize="20" Foreground="White" Margin="6,0,0,0" TextWrapping="WrapWithOverflow"/>
				<AccessText Name="NewsContent" Text="Content" FontSize="15" Foreground="White" Margin="6" TextWrapping="WrapWithOverflow"/>
			</StackPanel>
		</ScrollViewer>

		<Viewbox Grid.Column="1">
			<Image Name="Image" Width="431" Height="644" Stretch="Fill" RenderOptions.BitmapScalingMode="HighQuality" />
		</Viewbox>
	</Grid>
</UserControl>
